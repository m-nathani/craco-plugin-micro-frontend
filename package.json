{
  "name": "craco-plugin-micro-frontend",
  "version": "1.0.0",
  "private": false,
  "description": "Convert your CRA4 project into a node library application without ejecting or losing update support of react-scripts",
  "keywords": [
    "webpack",
    "micro-frontend",
    "react",
    "create-react-app",
    "cra",
    "craco",
    "eslint",
    "config",
    "plugin",
    "lint",
    "ecmascript",
    "javascript",
    "react",
    "jsx"
  ],
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/m-nathani/craco-plugin-micro-frontend.git"
  },
  "author": "mudza100@gmail.com",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "HUSKY=0 standard-version --release-as major",
    "lint": "eslint --ignore-path .gitignore src/**/*.{js,jsx}",
    "lint:fix": "npm run lint -- --fix",
    "prettier:fix": "prettier --write src/**/*",
    "prepare": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,scss,css,mdx}": [
      "prettier --write"
    ],
    "src/**/*.{js,jsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@craco/craco": "^6.4.3",
    "sass": "^1.45.0",
    "style-loader": "1.3.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpackbar": "^5.0.2",
    "worker-loader": "^3.0.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "eslint-config-cra": "^3.0.0",
    "prettier-config-cra": "^5.0.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.30.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.3",
    "react-scripts": "^4.0.3",
    "standard-version": "^9.3.2"
  },
  "peerDependencies": {
    "react-scripts": "^4.0.3"
  }
}
